    "wrangler": "4.21.x"
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "cf-typegen": "wrangler types",
    "check": "tsc && vite build && wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "dev": "vite",
    "dev:server": "ts-node src/server/index.ts",
    "lint": "eslint .",
    "preview": "npm run build && vite preview",
    "setup": "bash scripts/setup.sh",
    "setup:win": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",
    "db:init": "wrangler d1 execute my_mail_db --file=./schema.sql",
    "db:migrate": "wrangler d1 execute my_mail_db --file=./schema.sql",
    "logs": "wrangler tail",
    "secret:set": "wrangler secret put",
    "start": "node dist/server/index.js"
  },
  "type": "module"
}
